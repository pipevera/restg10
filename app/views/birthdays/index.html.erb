<p id="notice"><%= notice %></p>
<h1>Buscar</h1>
    <%= form_tag(birthdays_path) do %>
        <%= label_tag :nombre %>
        <%= text_field_tag :buscador, nil, placeholder: "Buscar nombre", class:"form-control" %>
        <%= submit_tag "Buscar", class:"btn btn-primary" %>
<% end -%>
<br>
<h1>Birthdays</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Fecha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @birthdays.each do |birthday| %>
      <tr>
        <td><%= birthday.nombre %></td>
        <td><%= birthday.fecha %></td>
        <td><%= link_to 'Show', birthday %></td>
        <td><%= link_to 'Edit', edit_birthday_path(birthday) %></td>
        <td><%= link_to 'Destroy', birthday, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Birthday', new_birthday_path %>
